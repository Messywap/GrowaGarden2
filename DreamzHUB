-- üåø Load Spawner
local Spawner = loadstring(game:HttpGet("https://codeberg.org/GrowAFilipino/GrowAGarden/raw/branch/main/Spawner.lua"))()

-- üå∏ Load UI Framework
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/Messywap/GrowaGarden2/refs/heads/main/field'))()

local Window = Rayfield:CreateWindow({
   Name = "DreamzHUB",
   Icon = 0,
   LoadingTitle = "DreamzHUB",
   LoadingSubtitle = "by Dream",
   ShowText = "Dreamz",
   Theme = "Bloom",
   ToggleUIKeybind = "K",
   DisableRayfieldPrompts = true,
   DisableBuildWarnings = false,
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "Dreamz",
      FileName = "Dreamz Hub"
   },
   KeySystem = false,
   KeySettings = {
      Title = "DreamzHUB",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"Hello"}
   }
})

-- üß™ Spawners Tab
local TabSpawners = Window:CreateTab("üß™ Spawners")

-- ü¶ù Pet Spawner Section
local PetSection = TabSpawners:CreateSection("ü¶ù Pet Spawner")

local SelectedPet = "Raccoon"
local PetWeight = "1"
local PetAge = "1"

TabSpawners:CreateDropdown({
   Name = "Pet Type",
   Options = Spawner.GetPets(),
   CurrentOption = {"Raccoon"},
   MultipleOptions = false,
   Flag = "PetDropdown",
   Callback = function(option)
      SelectedPet = option[1]
   end,
})

TabSpawners:CreateInput({
   Name = "Pet Weight",
   CurrentValue = "1",
   PlaceholderText = "1",
   RemoveTextAfterFocusLost = false,
   Flag = "PetWeight",
   Callback = function(value)
      PetWeight = value
   end,
})

TabSpawners:CreateInput({
   Name = "Pet Age",
   CurrentValue = "1",
   PlaceholderText = "1",
   RemoveTextAfterFocusLost = false,
   Flag = "PetAge",
   Callback = function(value)
      PetAge = value
   end,
})

TabSpawners:CreateButton({
   Name = "Spawn Pet",
   Callback = function()
      Spawner.SpawnPet(SelectedPet, tonumber(PetWeight), tonumber(PetAge))
      Rayfield:Notify({
         Title = "üêæ Pet Spawned",
         Content = "Spawned a " .. SelectedPet,
         Duration = 3
      })
   end,
})

-- ü•ö Egg Spawner Section
